{
  "id": null,
  "title": "NotiFER Application Dashboard",
  "tags": ["notifer"],
  "timezone": "Europe/Zagreb",
  "time": {
    "from": "now-1h",
    "to": "now"
  },
  "refresh": "30s",
  "version": 1,
  "editable": true,
  "fiscalYearStartMonth": 0,
  "graphTooltip": 0,
  "links": [],
  "liveNow": false,
  "panels": [
    {
      "id": 1,
      "title": "API Requests per Second",
      "type": "timeseries",
      "gridPos": {"h": 8, "w": 12, "x": 0, "y": 0},
      "targets": [
        {
          "expr": "rate(http_requests_total[5m])",
          "legendFormat": "{{method}} {{handler}}",
          "refId": "A"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "unit": "reqps",
          "color": {"mode": "palette-classic"}
        }
      },
      "options": {
        "legend": {"displayMode": "list", "placement": "bottom"}
      }
    },
    {
      "id": 2,
      "title": "Response Time (95th percentile)",
      "type": "timeseries",
      "gridPos": {"h": 8, "w": 12, "x": 12, "y": 0},
      "targets": [
        {
          "expr": "histogram_quantile(0.95, rate(http_request_duration_seconds_bucket[5m]))",
          "legendFormat": "95th percentile",
          "refId": "A"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "unit": "s",
          "color": {"mode": "palette-classic"}
        }
      },
      "options": {
        "legend": {"displayMode": "list", "placement": "bottom"}
      }
    },
    {
      "id": 3,
      "title": "Active Subscriptions",
      "type": "stat",
      "gridPos": {"h": 4, "w": 4, "x": 0, "y": 8},
      "targets": [
        {
          "expr": "notifer_active_subscriptions_total",
          "legendFormat": "Active",
          "refId": "A"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "color": {"mode": "thresholds"},
          "thresholds": {
            "steps": [
              {"color": "green", "value": null}
            ]
          }
        }
      }
    },
    {
      "id": 4,
      "title": "Total Subscriptions",
      "type": "stat",
      "gridPos": {"h": 4, "w": 4, "x": 4, "y": 8},
      "targets": [
        {
          "expr": "notifer_total_subscriptions",
          "legendFormat": "Total",
          "refId": "A"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "color": {"mode": "thresholds"},
          "thresholds": {
            "steps": [
              {"color": "green", "value": null},
              {"color": "yellow", "value": 100},
              {"color": "red", "value": 500}
            ]
          }
        }
      }
    },
    {
      "id": 5,
      "title": "Email Queue Size",
      "type": "stat",
      "gridPos": {"h": 4, "w": 4, "x": 8, "y": 8},
      "targets": [
        {
          "expr": "notifer_email_queue_size",
          "legendFormat": "Queued",
          "refId": "A"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "color": {"mode": "thresholds"},
          "thresholds": {
            "steps": [
              {"color": "green", "value": null},
              {"color": "yellow", "value": 10},
              {"color": "red", "value": 50}
            ]
          }
        }
      }
    },
    {
      "id": 6,
      "title": "Calendar Worker Cycles",
      "type": "stat",
      "gridPos": {"h": 4, "w": 4, "x": 12, "y": 8},
      "targets": [
        {
          "expr": "calendar_worker_cycles_total",
          "legendFormat": "Cycles",
          "refId": "A"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "color": {"mode": "thresholds"},
          "thresholds": {
            "steps": [
              {"color": "green", "value": null}
            ]
          }
        }
      }
    },
    {
      "id": 7,
      "title": "Worker Processing Time",
      "type": "stat",
      "gridPos": {"h": 4, "w": 4, "x": 16, "y": 8},
      "targets": [
        {
          "expr": "calendar_worker_last_cycle_timestamp_seconds * 1000",
          "legendFormat": "Last Cycle",
          "refId": "A"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "unit": "dateTimeAsIso",
          "color": {"mode": "thresholds"},
          "thresholds": {
            "steps": [
              {"color": "green", "value": null},
              {"color": "yellow", "value": 300},
              {"color": "red", "value": 600}
            ]
          }
        }
      }
    },
    {
      "id": 8,
      "title": "Subscription Processing",
      "type": "stat",
      "gridPos": {"h": 4, "w": 4, "x": 20, "y": 8},
      "targets": [
        {
          "expr": "calendar_worker_subscriptions_processed_total",
          "legendFormat": "{{status}}",
          "refId": "A"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "color": {"mode": "thresholds"},
          "thresholds": {
            "steps": [
              {"color": "green", "value": null}
            ]
          }
        }
      }
    },
    {
      "id": 9,
      "title": "System CPU Usage",
      "type": "timeseries",
      "gridPos": {"h": 8, "w": 12, "x": 0, "y": 12},
      "targets": [
        {
          "expr": "100 - (avg by(instance) (irate(node_cpu_seconds_total{mode=\"idle\"}[5m])) * 100)",
          "legendFormat": "CPU Usage %",
          "refId": "A"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "unit": "percent",
          "min": 0,
          "max": 100,
          "color": {"mode": "palette-classic"}
        }
      },
      "options": {
        "legend": {"displayMode": "list", "placement": "bottom"}
      }
    },
    {
      "id": 10,
      "title": "Memory Usage",
      "type": "timeseries",
      "gridPos": {"h": 8, "w": 12, "x": 12, "y": 12},
      "targets": [
        {
          "expr": "(node_memory_MemTotal_bytes - node_memory_MemAvailable_bytes) / node_memory_MemTotal_bytes * 100",
          "legendFormat": "Memory Usage %",
          "refId": "A"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "unit": "percent",
          "color": {"mode": "palette-classic"}
        }
      },
      "options": {
        "legend": {"displayMode": "list", "placement": "bottom"}
      }
    }
  ],
  "schemaVersion": 37,
  "style": "dark",
  "templating": {
    "list": []
  },
  "timepicker": {},
  "weekStart": ""
}
